@model  News_Admin.Models.AdminPanelListModel
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("AddUser", "Login", FormMethod.Post, new { id = "addUserForm" }))
            {

                @Html.ValidationSummary()
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(model => model.user.UserName, "Kullanıcı Adı")
                    @Html.TextBoxFor(model => model.user.UserName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.user.Password, "Şifre")
                    @Html.TextBoxFor(model => model.user.Password, new { @class = "form-control" })
                </div>

                <input type="submit" class="btn btn-primary " value="Ekle" />

            }
        </div>
    </div>
</div>

